@model WohooDigitalProject.News.Entities.Concrete.Haber
@{
    ViewBag.Title = "HaberGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Haber Guncelle</h2>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form method="post" action="/Admin/HaberGuncelle" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input hidden name="Id" value="@Model.Id" />
                <div class="form-group">
                    <label>Haber Başlığı</label>
                    <input type="text" required name="Title" class="form-control" value="@Model.Title">
                </div>
                <div class="form-group">
                    <label>Haber Detayı</label>
                    <textarea name="Description" required class="form-control" rows="3">@Model.Description</textarea>
                </div>
                <div class="form-group">
                    <label>Haber Görseli</label>
                    <input type="file" name="imgSource" accept="image/gif, image/jpg, image/png"  required class="form-control-file">
                </div>
                <div class="form-group">
                    <label>Sıra No</label>
                    <input type="text" name="OrderNumber" class="form-control" value="@Model.OrderNumber">
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" name="IsActive" value="true" @(Model.IsActive == true? "checked":"") class="form-check-input">
                    <label class="form-check-label">Haber Durumu</label>
                </div>
                <button type="submit" class="btn btn-success">Kaydet</button>
            </form>
        </div>
    </div>
</div>
